%h2 
  %i.general.foundicon-photo
  Images

.section-container
  - for image in @images
    %section.section
      %p.title
        = link_to image, admin_image_path(image)
.new-layout
  %fieldset
    %legend New Image
    = form_for :image, url: admin_images_path do |f|
      .row
        .small-6.columns
          = f.label :name
          = f.text_field :name, placeholder: 'e.g. header_style or base'
      .row
        .small-6.columns
          = f.label :file
          = f.file_field :file
      .row
        .small-4.columns
          = f.submit 'Add', class: 'small button'
